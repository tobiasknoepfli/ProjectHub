<Window x:Class="Sleipnir.App.Views.CustomDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Sleipnir" Height="220" Width="400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Border Background="#1A1D2E" CornerRadius="15" BorderBrush="#30363D" BorderThickness="1">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock x:Name="IconText" Text="âœ¨" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="TitleText" Text="TITLE" FontSize="16" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
            </StackPanel>
            
            <TextBlock Grid.Row="1" x:Name="MessageText" Text="Message goes here..." 
                       Foreground="#8B949E" FontSize="13" TextWrapping="Wrap" TextAlignment="Center" 
                       VerticalAlignment="Center" Margin="0,15"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="OkButton" Content="OK" Click="Ok_Click" Width="100" Height="35" Margin="5" Style="{StaticResource AccentButton}"/>
                <Button x:Name="NoButton" Content="No" Click="No_Click" Width="100" Height="35" Margin="5" Background="#2A2F45" Foreground="White" BorderThickness="0" Visibility="Collapsed"/>
                <Button x:Name="CancelButton" Content="Cancel" Click="Cancel_Click" Width="100" Height="35" Margin="5" Background="Transparent" Foreground="#8B949E" BorderBrush="#30363D" BorderThickness="1" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
