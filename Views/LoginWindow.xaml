<Window x:Class="Sleipnir.App.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sleipnir.App.Views"
        xmlns:utils="clr-namespace:Sleipnir.App.Utils"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Sleipnir | Login" Height="600" Width="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.Resources>
        <utils:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <utils:BooleanToVisibilityInverseConverter x:Key="BooleanToVisibilityInverseConverter"/>

    </Window.Resources>

    <Border Background="#0F111A" CornerRadius="20" BorderBrush="#30363D" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Height="32">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button Content="âœ•" Style="{StaticResource WindowCloseButton}" Click="Close_Click"/>
                </StackPanel>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="40,20">
                <StackPanel>
                    <Image Source="/Resources/sleipnir_logo.png" Height="64" Width="64" Margin="0,0,0,20"/>
                    <TextBlock Text="SLEIPNIR" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Project Management Refined" FontSize="14" Foreground="#8B949E" HorizontalAlignment="Center" Margin="0,0,0,40"/>

                    <!-- Login View -->
                    <StackPanel Visibility="{Binding IsRegistrationVisible, Converter={StaticResource BooleanToVisibilityInverseConverter}}">
                        <TextBlock Text="USERNAME" Foreground="#7C4DFF" FontSize="11" FontWeight="Bold" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Username}" Background="#1C1F30" Foreground="White" BorderThickness="0" Padding="15,12" Margin="0,0,0,20"/>

                        <TextBlock Text="PASSWORD" Foreground="#7C4DFF" FontSize="11" FontWeight="Bold" Margin="0,0,0,8"/>
                        <PasswordBox x:Name="LoginPasswordBox" Background="#1C1F30" Foreground="White" BorderThickness="0" Padding="15,12" Margin="0,0,0,10"
                                     PasswordChanged="LoginPasswordBox_PasswordChanged"/>

                        <CheckBox IsChecked="{Binding RememberMe}" Content="Remember me (Auto-login)" Foreground="#8B949E" Margin="0,0,0,30"/>

                        <Button Command="{Binding LoginCommand}" Content="Login" Style="{StaticResource AccentButton}" Height="50" FontSize="16" Margin="0,0,0,10"/>

                        <TextBlock Text="{Binding ErrorMessage}" Foreground="#FF5252" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,10" TextWrapping="Wrap" TextAlignment="Center"/>

                        <Grid>
                            <Button Command="{Binding ShowRegistrationCommand}" Content="Need an account? Register" Background="Transparent" Foreground="#7C4DFF" HorizontalAlignment="Left"/>
                            <Button Command="{Binding ShowPasswordResetCommand}" Content="Forgot Password?" Background="Transparent" Foreground="#8B949E" HorizontalAlignment="Right" FontSize="11"/>
                        </Grid>
                    </StackPanel>

                    <!-- Registration View -->
                    <StackPanel Visibility="{Binding IsRegistrationVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Margin="0,0,10,0">
                                <TextBlock Text="FIRST NAME" Foreground="#7C4DFF" FontSize="11" FontWeight="Bold" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding RegFirstName}" Background="#1C1F30" Foreground="White" BorderThickness="0" Padding="15,12"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="LAST NAME" Foreground="#7C4DFF" FontSize="11" FontWeight="Bold" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding RegLastName}" Background="#1C1F30" Foreground="White" BorderThickness="0" Padding="15,12"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="EMAIL ADDRESS (Required for Password Recovery)" Foreground="#7C4DFF" FontSize="11" FontWeight="Bold" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding RegEmail}" Background="#1C1F30" Foreground="White" BorderThickness="0" Padding="15,12" Margin="0,0,0,20"/>

                        <TextBlock Text="CHOOSE USERNAME" Foreground="#7C4DFF" FontSize="11" FontWeight="Bold" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding RegUsername}" Background="#1C1F30" Foreground="White" BorderThickness="0" Padding="15,12" Margin="0,0,0,20"/>

                        <TextBlock Text="PASSWORD" Foreground="#7C4DFF" FontSize="11" FontWeight="Bold" Margin="0,0,0,8"/>
                        <PasswordBox x:Name="RegPasswordBox" Background="#1C1F30" Foreground="White" BorderThickness="0" Padding="15,12" Margin="0,0,0,20"
                                     PasswordChanged="RegPasswordBox_PasswordChanged"/>

                        <TextBlock Text="SELECT YOUR ICON" Foreground="#7C4DFF" FontSize="11" FontWeight="Bold" Margin="0,0,0,8"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Width="50" Height="50" Background="#1C1F30" CornerRadius="8" Margin="0,0,10,0">
                                <iconPacks:PackIconMaterial Kind="{Binding RegSelectedEmoji, FallbackValue=Account}" Width="32" Height="32" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <TextBox Grid.Column="1" Text="{Binding EmojiSearchQuery, UpdateSourceTrigger=PropertyChanged}" 
                                     Background="#1C1F30" Foreground="White" BorderThickness="0" Padding="15,12" VerticalContentAlignment="Center"
                                     Tag="Search over 7000 icons..."/>
                        </Grid>
                        
                        <ListBox ItemsSource="{Binding AvailableEmojis}" SelectedItem="{Binding RegSelectedEmoji}" 
                                 Background="Transparent" BorderThickness="0" Height="200" Margin="0,0,0,20"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="10"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="40" Height="40" Background="Transparent" ToolTip="{Binding}">
                                        <iconPacks:PackIconMaterial Kind="{Binding}" Width="24" Height="24" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="Bd" Background="Transparent" CornerRadius="6" Margin="2">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Bd" Property="Background" Value="#2A2F45"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Bd" Property="Background" Value="#7C4DFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>

                        <Button Command="{Binding RegisterCommand}" Content="Create Account" Style="{StaticResource AccentButton}" Height="50" FontSize="16" Margin="0,0,0,20"/>

                        <TextBlock Text="{Binding ErrorMessage}" Foreground="#FF5252" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                        <Button Command="{Binding ShowLoginCommand}" Content="Already have an account? Login" Background="Transparent" Foreground="#7C4DFF"/>
                    </StackPanel>

                    <!-- Password Reset View -->
                    <StackPanel Visibility="{Binding IsPasswordResetVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="RESET PASSWORD" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                        <TextBlock Text="Enter your username and registered email to reset your password to 'admin'." Foreground="#8B949E" FontSize="12" Margin="0,0,0,30" TextAlignment="Center" TextWrapping="Wrap"/>
                        
                        <TextBlock Text="USERNAME" Foreground="#7C4DFF" FontSize="11" FontWeight="Bold" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding ResetUsername}" Background="#1C1F30" Foreground="White" BorderThickness="0" Padding="15,12" Margin="0,0,0,20"/>

                        <TextBlock Text="REGISTERED EMAIL" Foreground="#7C4DFF" FontSize="11" FontWeight="Bold" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding ResetEmail}" Background="#1C1F30" Foreground="White" BorderThickness="0" Padding="15,12" Margin="0,0,0,30"/>

                        <Button Command="{Binding ResetPasswordCommand}" Content="Attempt Reset" Style="{StaticResource AccentButton}" Height="50" FontSize="16" Margin="0,0,0,20"/>

                        <TextBlock Text="{Binding ErrorMessage}" Foreground="#FF5252" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,10" TextWrapping="Wrap" TextAlignment="Center"/>

                        <Button Command="{Binding ShowLoginCommand}" Content="Back to Login" Background="Transparent" Foreground="#7C4DFF"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
