<Window x:Class="ProjectHub.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectHub.App.Views"
        xmlns:vm="clr-namespace:ProjectHub.App.ViewModels"
        mc:Ignorable="d"
        Title="ProjectLink" Height="900" Width="1400"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" 
                      ResizeBorderThickness="5" 
                      GlassFrameThickness="0" 
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <local:StringToVisibilityInverseConverter x:Key="StringToVisibilityInverseConverter"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

        <DataTemplate x:Key="IssueCardTemplate">
            <Border Style="{StaticResource ModernCard}" Margin="0,0,0,12">
                <StackPanel>
                    <Grid Margin="0,0,0,8">
                        <Border Background="#2A2F45" Padding="8,3" CornerRadius="4" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="[BUG] " FontSize="10" Foreground="{StaticResource AccentBrush}" 
                                           Visibility="{Binding Type, ConverterParameter=Bug, Converter={StaticResource StringToVisibilityConverter}}"/>
                                <TextBlock Text="[STORY] " FontSize="10" Foreground="{StaticResource AccentBrush}" 
                                           Visibility="{Binding Type, ConverterParameter=Story, Converter={StaticResource StringToVisibilityConverter}}"/>
                                <TextBlock Text="[ITEM] " FontSize="10" Foreground="{StaticResource AccentBrush}" 
                                           Visibility="{Binding Type, ConverterParameter=Bug|Story, Converter={StaticResource StringToVisibilityInverseConverter}}"/>
                                
                                <TextBlock Text="{Binding Type}" FontSize="10" Foreground="{StaticResource AccentBrush}" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                             <Button Style="{StaticResource SidebarButton}"
                                    Command="{Binding DataContext.AssignToSprintCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                    CommandParameter="{Binding}"
                                    Visibility="{Binding SprintId, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"
                                    Margin="0,0,5,0">
                                <Border Background="#3D7C4DFF" Padding="4,2" CornerRadius="4">
                                    <TextBlock Text="PLAN" FontSize="10" Foreground="{StaticResource AccentBrush}" FontWeight="Bold"/>
                                </Border>
                            </Button>

                            <Button Style="{StaticResource SidebarButton}"
                                    Command="{Binding DataContext.ShowLogsCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                    CommandParameter="{Binding}" WindowChrome.IsHitTestVisibleInChrome="True">
                                 <TextBlock Text="LOG" FontSize="10" ToolTip="Show Timeline / Logs" Foreground="{StaticResource TextMutedBrush}"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="{Binding FormattedTitle}" FontWeight="SemiBold" Margin="0,0,0,8" 
                               TextWrapping="Wrap" FontSize="13" LineHeight="17"/>
                    
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#1A1D2E" Padding="5,2" CornerRadius="4">
                                <TextBlock Text="{Binding AgeString}" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                             <Border Background="#337C4DFF" Padding="5,2" CornerRadius="4" Visibility="{Binding SprintId, Converter={StaticResource NullToVisibilityConverter}}">
                                <TextBlock Text="Sprint" FontSize="10" Foreground="{StaticResource AccentBrush}"/>
                             </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="InnerContentGrid" Grid.RowSpan="2">
            <Grid.Effect>
                <BlurEffect Radius="{Binding IsProjectSelectorVisible, Converter={StaticResource BooleanToDoubleConverter}, ConverterParameter=15}"/>
            </Grid.Effect>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Border Grid.Row="0" Background="#141724" Height="32" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                    <TextBlock Text="PH" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="ProjectLink | Modern Issue Tracker" VerticalAlignment="Center" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button Content="â€”" Style="{StaticResource WindowControlButton}" Click="Minimize_Click"/>
                    <Button Content="â–¢" Style="{StaticResource WindowControlButton}" Click="Maximize_Click"/>
                    <Button Content="âœ•" Style="{StaticResource WindowCloseButton}" Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" Background="#141724" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                        <TextBlock Text="PL" FontSize="24" Margin="0,0,10,0" Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock Text="ProjectLink" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Project Switcher Card -->
                    <Button Grid.Row="1" Command="{Binding ToggleProjectSelectorCommand}" Style="{StaticResource SidebarButton}" Height="60" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Width="35" Height="35" CornerRadius="8" Margin="0,0,12,0" ClipToBounds="True">
                                <Grid>
                                    <!-- Placeholder Background -->
                                    <Border Background="{StaticResource AccentBrush}" 
                                            Visibility="{Binding SelectedProject.LogoUrl, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                    
                                    <TextBlock Text="P" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="White"
                                               Visibility="{Binding SelectedProject.LogoUrl, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                    
                                    <Image Source="{Binding SelectedProject.LogoUrl}" Stretch="UniformToFill"
                                           Visibility="{Binding SelectedProject.LogoUrl, Converter={StaticResource NullToVisibilityConverter}}">
                                    </Image>
                                </Grid>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding SelectedProject.Name, FallbackValue='Select Project'}" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="Switch Workspace" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="â–¼" FontSize="10" VerticalAlignment="Center" Foreground="{StaticResource TextMutedBrush}"/>
                        </Grid>
                    </Button>

                    <TextBlock Grid.Row="2" Text="SPRINTS" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextMutedBrush}" Margin="5,0,0,5"/>

                    <StackPanel Grid.Row="3" Margin="0,20,0,10">
                        <TextBlock Text="PLANNING" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextMutedBrush}" Margin="5,0,0,10"/>
                        
                        <Button Style="{StaticResource SidebarButton}" Padding="5" 
                                Click="AllIssues_Click" Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“‹" Margin="0,0,10,0"/>
                                <TextBlock Text="All / Unplanned" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>

                        <TextBlock Text="SPRINTS" FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextMutedBrush}" Margin="5,0,0,5"/>
                        <ListBox ItemsSource="{Binding Sprints}" 
                                SelectedItem="{Binding SelectedSprint}"
                                Background="Transparent" BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="5,2" Opacity="{Binding IsCurrent, Converter={StaticResource BooleanToOpacityConverter}, FallbackValue=1}">
                                        <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding StartDate, StringFormat='{}{0:dd.MM}'}" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                                            <TextBlock Text=" - " FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                                            <TextBlock Text="{Binding EndDate, StringFormat='{}{0:dd.MM}'}" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                                            <Border Margin="10,0,0,0" Background="#3300C853" CornerRadius="4" Visibility="{Binding IsCurrent, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <TextBlock Text="ACTIVE" FontSize="8" Padding="3,1" Foreground="#00C853" FontWeight="Bold"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Command="{Binding OpenSprintModalCommand}" Style="{StaticResource SidebarButton}" Margin="0,5,0,0">
                             <TextBlock Text="+ Add Sprint" FontSize="11"/>
                        </Button>

                        <Button Command="{Binding ToggleArchiveCommand}" Style="{StaticResource SidebarButton}" Margin="0,15,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“" Margin="0,0,10,0"/>
                                <TextBlock Text="Sprint Archive" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>

                        <!-- Archive Section -->
                        <ListBox ItemsSource="{Binding ArchivedSprints}" 
                                 SelectedItem="{Binding SelectedSprint}"
                                 Background="Transparent" BorderThickness="0"
                                 Visibility="{Binding IsArchiveVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="15,2" Opacity="0.6">
                                        <TextBlock Text="{Binding Name}" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                                        <TextBlock Text="{Binding EndDate, StringFormat='{}Ended {0:dd.MM.yyyy}'}" FontSize="9" Foreground="{StaticResource TextMutedBrush}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>

                    <Button Grid.Row="4" Command="{Binding CreateProjectCommand}" Style="{StaticResource SidebarButton}" Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="+" Margin="0,0,10,0"/>
                            <TextBlock Text="Add New Project"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Column="1" Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Margin="0,0,0,20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding SelectedProject.Name, FallbackValue='Select a Project'}" FontSize="28" FontWeight="Bold"/>
                            <Button Command="{Binding EditProjectModalCommand}" Style="{StaticResource WindowControlButton}" Width="30" Height="30" Margin="10,0,0,0">
                                <TextBlock Text="âœŽ" FontSize="14" Foreground="{StaticResource TextMutedBrush}"/>
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding SelectedSprint.Name, FallbackValue='All Issues'}" FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}"/>
                            <Button Command="{Binding EditSprintModalCommand}" Style="{StaticResource WindowControlButton}" Width="25" Height="25" Margin="5,-2,5,0" Padding="0">
                                <TextBlock Text="âœŽ" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                            </Button>
                            <TextBlock Text=" â€¢ " Foreground="{StaticResource TextMutedBrush}"/>
                            <TextBlock Text="{Binding SelectedProject.Description, FallbackValue='...'}" Foreground="{StaticResource TextMutedBrush}"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                         <Button Command="{Binding CompleteSprintCommand}" Style="{StaticResource AccentButton}" Margin="0,0,15,0"
                                Visibility="{Binding SelectedSprint.CanBeCompleted, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Complete Sprint âˆš" Foreground="White" FontWeight="Bold"/>
                        </Button>

                        <Border CornerRadius="20" Background="#2A2F45" Padding="15,8" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="S" Margin="0,0,10,0"/>
                                <TextBlock Text="Search items..." Foreground="{StaticResource TextMutedBrush}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <TabControl Grid.Row="1" Margin="0,0,0,20" 
                            SelectedValue="{Binding SelectedCategory, Mode=TwoWay}"
                            SelectedValuePath="Tag">
                    <TabItem Tag="Backlog">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="B "/>
                                <TextBlock Text="Backlog"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Tag="Pipeline">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="P "/>
                                <TextBlock Text="Pipeline"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Tag="Hub">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="H "/>
                                <TextBlock Text="Hub"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                </TabControl>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0" Padding="0,0,15,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Margin="0,0,0,20">
                                <StackPanel>
                                    <Border Height="3" Background="{StaticResource OpenStatusBrush}" CornerRadius="1.5" Margin="0,0,0,10" Width="40" HorizontalAlignment="Left"/>
                                    <TextBlock Text="OPEN" Style="{StaticResource CategoryHeader}" Foreground="{StaticResource OpenStatusBrush}"/>
                                </StackPanel>
                                <Button HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource SidebarButton}" 
                                        Command="{Binding CreateIssueCommand}" CommandParameter="Open" WindowChrome.IsHitTestVisibleInChrome="True">
                                    <TextBlock Text="+" Foreground="{StaticResource TextMutedBrush}"/>
                                </Button>
                            </Grid>
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding OpenItems}" ItemTemplate="{StaticResource IssueCardTemplate}"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0" Padding="15,0,15,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Margin="0,0,0,20">
                                <StackPanel>
                                    <Border Height="3" Background="{StaticResource InProgressStatusBrush}" CornerRadius="1.5" Margin="0,0,0,10" Width="40" HorizontalAlignment="Left"/>
                                    <TextBlock Text="IN PROGRESS" Style="{StaticResource CategoryHeader}" Foreground="{StaticResource InProgressStatusBrush}"/>
                                </StackPanel>
                                <Button HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource SidebarButton}"
                                        Command="{Binding CreateIssueCommand}" CommandParameter="In Progress" WindowChrome.IsHitTestVisibleInChrome="True">
                                    <TextBlock Text="+" Foreground="{StaticResource TextMutedBrush}"/>
                                </Button>
                            </Grid>
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding InProgressItems}" ItemTemplate="{StaticResource IssueCardTemplate}"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <Border Grid.Column="2" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0" Padding="15,0,15,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Margin="0,0,0,20">
                                <StackPanel>
                                    <Border Height="3" Background="{StaticResource TestingStatusBrush}" CornerRadius="1.5" Margin="0,0,0,10" Width="40" HorizontalAlignment="Left"/>
                                    <TextBlock Text="IN TESTING" Style="{StaticResource CategoryHeader}" Foreground="{StaticResource TestingStatusBrush}"/>
                                </StackPanel>
                                <Button HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource SidebarButton}"
                                        Command="{Binding CreateIssueCommand}" CommandParameter="In Testing" WindowChrome.IsHitTestVisibleInChrome="True">
                                    <TextBlock Text="+" Foreground="{StaticResource TextMutedBrush}"/>
                                    </Button>
                            </Grid>
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding TestingItems}" ItemTemplate="{StaticResource IssueCardTemplate}"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <Border Grid.Column="3" Padding="15,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Margin="0,0,0,20">
                                <StackPanel>
                                    <Border Height="3" Background="{StaticResource FinishedStatusBrush}" CornerRadius="1.5" Margin="0,0,0,10" Width="40" HorizontalAlignment="Left"/>
                                    <TextBlock Text="FINISHED" Style="{StaticResource CategoryHeader}" Foreground="{StaticResource FinishedStatusBrush}"/>
                                </StackPanel>
                                <Button HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource SidebarButton}"
                                        Command="{Binding CreateIssueCommand}" CommandParameter="Finished" WindowChrome.IsHitTestVisibleInChrome="True">
                                    <TextBlock Text="+" Foreground="{StaticResource TextMutedBrush}"/>
                                </Button>
                            </Grid>
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding FinishedItems}" ItemTemplate="{StaticResource IssueCardTemplate}"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>

        <!-- Project Modal Overlay -->
        <Border Grid.RowSpan="2" Background="#CC000000" Visibility="{Binding IsProjectModalVisible, Converter={StaticResource BooleanToVisibilityConverter}}" Panel.ZIndex="2500">
            <Border Background="#1A1D2E" CornerRadius="15" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                    Width="500" Height="580" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid Margin="40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{Binding ProjectModalTitle}" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Project Name" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding NewProjectName, UpdateSourceTrigger=PropertyChanged}" Background="#2A2F45" BorderThickness="0" Padding="10" Foreground="White" Margin="0,0,0,20"/>

                        <TextBlock Text="Description" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding NewProjectDescription, UpdateSourceTrigger=PropertyChanged}" Background="#2A2F45" BorderThickness="0" Padding="10" Foreground="White" Margin="0,0,0,20" Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>

                        <TextBlock Text="Logo URL / Path" Foreground="{StaticResource TextMutedBrush}" Margin="0,15,0,8"/>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding NewProjectLogoUrl, UpdateSourceTrigger=PropertyChanged}" Background="#2A2F45" BorderThickness="0" Padding="10" Foreground="White"/>
                            <Button Grid.Column="1" Command="{Binding BrowseLogoCommand}" Style="{StaticResource SidebarButton}" Content="ðŸ“" Width="40" Height="40" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" Margin="5,0,0,0" ToolTip="Browse..."/>
                            <Button Grid.Column="2" Command="{Binding ClearLogoCommand}" Style="{StaticResource SidebarButton}" Content="âœ•" Width="40" Height="40" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" Margin="5,0,0,0" ToolTip="Clear Logo"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Command="{Binding CancelProjectModalCommand}" Style="{StaticResource SidebarButton}" Content="Cancel" Margin="0,0,10,0"/>
                        <Button Command="{Binding SaveProjectCommand}" Style="{StaticResource AccentButton}" Content="Save Project"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Sprint Planning Modal Overlay -->
        <Border Grid.RowSpan="2" Background="#CC000000" Visibility="{Binding IsSprintModalVisible, Converter={StaticResource BooleanToVisibilityConverter}}" Panel.ZIndex="2000">
            <Border Background="#1A1D2E" CornerRadius="15" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                    Width="500" Height="450" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid Margin="40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{Binding SprintModalTitle}" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Sprint Name" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding NewSprintName, UpdateSourceTrigger=PropertyChanged}" Background="#2A2F45" BorderThickness="0" Padding="10" Foreground="White" Margin="0,0,0,20"/>

                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel>
                                <TextBlock Text="From" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,8"/>
                                <DatePicker SelectedDate="{Binding NewSprintStartDate, Mode=TwoWay}" Language="en-GB"/>
                            </StackPanel>

                            <TextBlock Grid.Column="1" Text="â†’" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Foreground="{StaticResource TextMutedBrush}"/>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="To" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,8"/>
                                <DatePicker SelectedDate="{Binding NewSprintEndDate, Mode=TwoWay}" Language="en-GB"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <Grid Grid.Row="2" Margin="0,20,0,0">
                        <Button Command="{Binding DeleteSprintCommand}" Style="{StaticResource DangerButton}" Content="Delete Sprint" HorizontalAlignment="Left"
                                Visibility="{Binding IsEditingSprint, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Command="{Binding CancelSprintModalCommand}" Style="{StaticResource SidebarButton}" Content="Cancel" Margin="0,0,10,0"/>
                            <Button Command="{Binding SaveSprintCommand}" Style="{StaticResource AccentButton}" Content="{Binding SprintModalTitle}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Border>
        
        <!-- Loading Overlay -->
        <Border Grid.RowSpan="2" Background="#CC000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" Panel.ZIndex="1000">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Syncing..." Margin="0,10,0,0" FontWeight="Medium"/>
            </StackPanel>
        </Border>
        <!-- Project Hub Wheel (Hidden Overlay) -->
        <Border Grid.RowSpan="2" Background="#DD0F111A" Panel.ZIndex="3000"
                Visibility="{Binding IsProjectSelectorVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Command="{Binding ToggleProjectSelectorCommand}" Style="{StaticResource WindowControlButton}" 
                        HorizontalAlignment="Right" Margin="30" Width="40" Height="40">
                    <TextBlock Text="âœ•" FontSize="20"/>
                </Button>

                <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- Central Orb -->
                    <Border Width="200" Height="200" Background="#1A1D2E" CornerRadius="100" BorderBrush="{StaticResource AccentBrush}" BorderThickness="2" Panel.ZIndex="10">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="PL" FontSize="60" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="PROJECT HUB" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Projects Wheel (ItemsControl) -->
                    <ItemsControl ItemsSource="{Binding Projects}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="2" Rows="2" Width="600" Height="600"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.SelectProjectCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource SidebarButton}" Height="160" Width="160">
                                    <Border Background="#2A2F45" CornerRadius="20" Padding="15">
                                        <StackPanel VerticalAlignment="Center">
                                            <Border Width="50" Height="50" CornerRadius="12" Margin="0,0,0,12" HorizontalAlignment="Center" ClipToBounds="True">
                                                <Grid>
                                                    <Border Background="{StaticResource AccentBrush}" 
                                                            Visibility="{Binding LogoUrl, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                                    
                                                    <TextBlock Text="P" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="center" VerticalAlignment="Center"
                                                               Visibility="{Binding LogoUrl, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                                    
                                                    <Image Source="{Binding LogoUrl}" Stretch="UniformToFill"
                                                           Visibility="{Binding LogoUrl, Converter={StaticResource NullToVisibilityConverter}}">
                                                    </Image>
                                                </Grid>
                                            </Border>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" HorizontalAlignment="Center" FontSize="15" 
                                                       TextAlignment="Center" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" 
                                                       MaxHeight="45"/>
                                        </StackPanel>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
