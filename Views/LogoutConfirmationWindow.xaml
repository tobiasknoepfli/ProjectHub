<Window x:Class="Sleipnir.App.Views.LogoutConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Confirm Logout" Height="200" Width="350"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Border Background="#1A1D2E" CornerRadius="15" BorderBrush="#30363D" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="LOGOUT" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            
            <TextBlock Grid.Row="1" Text="Are you sure you want to log out? You will need to enter your credentials next time." 
                       Foreground="#8B949E" FontSize="13" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center" Margin="0,10"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Logout" Click="Logout_Click" Width="100" Height="35" Margin="0,0,10,0" Style="{StaticResource AccentButton}"/>
                <Button Content="Cancel" Click="Cancel_Click" Width="100" Height="35" Background="Transparent" Foreground="#8B949E" BorderBrush="#30363D" BorderThickness="1"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
